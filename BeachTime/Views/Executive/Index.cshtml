@model BeachTime.Models.ExecutiveIndexViewModel

@{
    ViewBag.Title = "Index";
}
<div class="row text-center">
    <div class="col-xs-12">
        <h2 class="text-primary">
            <b>Executive Dashboard</b>
        </h2>
        <h3 class="text-secondary">
            @Model.FirstName @Model.LastName
        </h3>
    </div>

</div>

<div class="row">

    <h3 class="text-primary">
        <b>Consultant Information</b>
    </h3>

    <div class="col-xs-12 col-sm-6">
        <p class="text-secondary">
            The number of consultants on projects and on the beach are displayed here.  Click one of the links to view a group in detail.
        </p>
    </div>
    <div class="col-xs-12 col-sm-6">

        <div class="row">

            <div class="col-xs-12 text-center">
                @Html.ActionLink("Consultants on Projects: " + @Model.OccupiedConsultantsCount, "Occupied", "Executive", new { @class = "btn btn-success btn-lg" })
            </div>
            <br/><br/>
        </div>
        <div class="row">

            <div class="col-xs-12 text-center">
                @Html.ActionLink("Consultants on the Beach: " + @Model.BeachConsultantsCount, "Beach", "Executive", new { @class = "btn btn-warning btn-lg" })
            </div>
            <br/>
        </div>
    </div>


</div>

<div class="row">

    <h3 class="text-primary">
        <b>Skills on the Beach</b>
    </h3>

    <div class="col-xs-12 col-sm-6">
        <p class="text-secondary">
            All skills that consultants on the beach claim to have are displayed here.  Click a skill to view a list of consultants on the beach with that particular skill.
        </p>
    </div>

    <div class="col-sm-6">

        <div class="row text-center">
            @{
                foreach (string skill in Model.SkillList)
                {
                    <div class="col-xs-4">@skill</div>
                }
            }
        </div>

    </div>
</div>
