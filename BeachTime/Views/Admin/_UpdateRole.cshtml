@model BeachTime.Models.AdminUpdateRoleViewModel

@{
    ViewBag.Title = "Update User Role";
}

<h2>User Role Request</h2>

<h3>User Requesting Role Change:</h3>

<table>
    <tr>
        <th>User ID</th>
        <td>@Model.UserId</td>
    </tr>
    <tr>
        <th>First name</th>
        <td>@Html.LabelForModel(Model.FirstName)</td>
    </tr>
    <tr>
        <th>Last name</th>
        <td>@Html.LabelForModel(Model.LastName)</td>
    </tr>
    <tr>
        <th>Username</th>
        <td>@Html.LabelForModel(Model.UserName)</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Html.LabelForModel(Model.Email)</td>
    </tr>
</table>


<h3>Role Requested:</h3>

<table>
    <tr>
        @using (@Html.BeginForm()){
            @Html.AntiForgeryToken()
            
            @Html.HiddenFor(m => m.FirstName)
            @Html.HiddenFor(m => m.LastName)
            @Html.HiddenFor(m => m.UserName)
            @Html.HiddenFor(m => m.Email)
            @Html.HiddenFor(m => m.UserId)
            @Html.HiddenFor(m => m.RequestId)
            @Html.HiddenFor(m => m.RoleName)


            <th>@Model.RoleName</th>
            <td><input type="submit" name="action:AcceptRole" value="Accept"/></td>
            <td><input type="submit" name="action:DenyRole" value="Deny" /></td>
        }
    </tr>
</table>

