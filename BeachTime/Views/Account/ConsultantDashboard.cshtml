@using BeachTime.Models
@model LoginViewModel

@{
    ViewBag.Title = "ConsultantDashboard";
}

<head>
    <style>
        p.p02 {
            color: #00D5FF;
            -ms-text-shadow: 1px 1px 1px #855C33;
            text-shadow: 1px 1px 1px #855C33;
        }
    </style>

</head>

<body>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="jumbotron" style="background-color: #EDE7E0">
            <p class="p02" align="center" style="font-size: 300%"><b>Name while go here</b></p>
            <p class="p02" align="center" style="font-size: 200%">Current Project: </p>
            <p class="p02" align="left" style="font-size: 145%">Acount type: </p>
            <p class="p02" align="left" style="font-size: 145%">Acount tags: </p>
            <p class="p02" align="left" style="font-size: 145%">Resume(s): </p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" align="center">
                <a class="btn btn-primary btn-sm" href="#success" data-toggle="modal"><h5>Update Profile</h5></a>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" align="center">
                <a type="submit" href="#success" class="btn btn-primary btn-sm"><h5>Logout</h5></a>
            </div>
        </div>

    <!-- Modal -->
        <div class="modal fade" id="success" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header modal-header-success">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3>Update Your Profile</h3>
                    </div>
                    <div class="modal-body">
                        <p>
                            Please provide some information about your current project, relevant tags for skills and expertise, and upload
                            a resume and other related files that Account Executive may need.
                        </p>
                        <p>Html.TextBoxFor(mod => mod.CurrentProject) Enter your current project (leave blank if you are not currently working on one)</p>
                        <p>Html.TextBoxFor(mod => mod.Tags) Enter tags for your skills (separate multiple tags with a comma)</p>
                        <br />
                        <p>If you do not wish to update these, leave them blank:</p>
                        <p>Html.TextBoxFor(mod => mod.NewEmail) Enter a valid email address</p>
                        <p>Html.TextBoxFor(mod => mod.ConfirmEmail) Confirm new email address</p>
                        <p>Html.TextBoxFor(mod => mod.NewPassword) (minimum 7 characters)</p>
                        <p>Html.TextBoxFor(mod => mod.ConfirmPassword) (re-enter new password)</p>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10" align="center">
                                <a type="submit" href="#success" class="btn btn-primary" data-dismiss="modal"><h5>Update Profile</h5></a>
                            </div>
                        </div>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    <!-- Modal -->

    }

</body>