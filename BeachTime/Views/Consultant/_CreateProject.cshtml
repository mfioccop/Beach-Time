@model BeachTime.Models.ProjectViewModel
@Styles.Render("~/Content/css")           

@{
    ViewBag.Title = "Create Project";
}

<div class="modal-body" style="background-color: #EDE7E0">
    @using (Html.BeginForm("Index", "Consultant", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div>
            <h4>Enter the name of the project below</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <p style="font-size: 150%">Project Name</p>
                <div class="col-md-10">
                    <h6> @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } }) </h6>
                    @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    <div class="checkbox">
                        <p>
                            Check the box if the project is complete&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.EditorFor(model => model.IsCompleted)
                            @Html.ValidationMessageFor(model => model.IsCompleted, "", new { @class = "text-danger" })
                        </p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" id="approve-btn" class="btn btn-default">Save</button>
                </div>
            </div>
        </div>
    }
</div>



