@model BeachTime.Models.ProjectCreateViewModel
@Styles.Render("~/Content/css")           

@{
    ViewBag.Title = "Create Project";
}

<div id="projectModal" class="modal-body" style="background-color: #EDE7E0">
    @using (Html.BeginForm("CreateProject", "Consultant", FormMethod.Post, new { @id = "projectForm", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div>
            <h4>Enter the name of the project below</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <p style="font-size: 150%">Project Name</p>
                <div class="col-md-10">
                    <h6> @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } }) </h6>
                    @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    <div class="checkbox">
                        <p>
                            Check the box if the project is complete&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.EditorFor(model => model.IsCompleted)
                            @Html.ValidationMessageFor(model => model.IsCompleted, "", new { @class = "text-danger" })
                        </p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-default" id="approve-btn">Save New Project</button>
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">

    var uploadUrl = '@Url.Action("CreateProject")';

    function createProject() {
        $("#projectForm").attr('action', uploadUrl).submit();
    }


    function startUpload() {
        $('#projectModal').modal('show');
    }

    $(function() {
        $("#projectModal").on('click', '#approve-btn', function () {
            createProject();
        });
    });

</script>