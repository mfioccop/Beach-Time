@model BeachTime.Models.ConsultantEditViewModel

@{
    Layout = null;
}

@{
    ViewBag.Title = "Edit";
}

    <h2>Update Profile</h2>

    <p>
    Please provide some information about your current project, relevant tags for skills and expertise, and upload
    a resume and other related files that Account Executive may need.

    <table>
        <th>Project Name</th>
        <th>Status</th>
        <th>Update Project</th>
        @{
            foreach (var item in Model.Projects)
            {
                <tr>
                    <td>@item.ProjectName</td>
                    <td>
                        @{
                            if (item.IsCompleted)
                            {
                                @:Completed
                            }
                            else
                            {
                                @:In progress
                            }
                        }
                    </td>
                    <td>@Html.ActionLink("Update", "UpdateProject", "Consultant", new { id = item.ProjectId }, null)</td>
                </tr>
            }
        }
    </table>

    @Html.ActionLink("Add new project", "CreateProject", "Consultant")

    <br /><br />
    Skill tags (current delimeter single comma = "skill1,skill2" , or maybe <a href="http://timschlechter.github.io/bootstrap-tagsinput/examples/">use this plugin for tagging system</a>)

    <div>
        @using (Html.BeginForm("Edit", "Consultant", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken();

            @:Skills:

            var skills = String.Empty;

            foreach (var item in Model.SkillList)
            {
                skills += item + ",";
            }

            @Html.EditorFor(m => m.SkillsString);

            <input type="submit" value="Update Profile" />
        }
    </div>
    

<br />
    @Html.ActionLink("Return to Dashboard", "Index", "Consultant")


